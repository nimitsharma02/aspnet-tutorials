<form asp-action="Register" asp-controller="Recaptcha" method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">Username</label>
        <input type="email" class="form-control" name="Username">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" class="form-control" placeholder="Password" name="Password">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Confirm Password</label>
        <input type="password" class="form-control" placeholder="Password" name="ConfirmPassword">
    </div>
    <div class="form-group">
        <div class="g-recaptcha" data-sitekey="6LfeoWAcAAAAAEfWBDGYaclpPQ5DQYghCOItEaod">

        </div>
    </div>
    <h3 class="text-danger">@Model.Error</h3> @*???*@

    <button type="submit" class="btn btn-primary">Register</button>
</form>
<script src="https://www.google.com/recaptcha/api.js"></script>
